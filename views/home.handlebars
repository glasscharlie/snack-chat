<div class="mainBox pure-g">

  <div class="leftBox pure-u-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-5">

    <div class="leftCard">

      <h2>Welcome to snackChat!</h2>
      <p>Please log in.</p>  
      <form>
        <input type="text" name="username" placeholder="User Name"></input><br />
        <input type="password" name="password" placeholder="Password"></input><br />
        <button id="loginButton">let's eat!</button>
      </form>

    </div>

  </div>

  <div class="rightBox pure-u-1 pure-u-sm-1-2 pure-u-md-2-3 pure-u-lg-4-5">

    <div class="rightCard">

      <img id="splashImage" src="" alt="randomized splash image of food">

    </div>

  </div>

</div>

<script>
  function pickPic() {
    document.getElementById("splashImage").className = 'splash';
    const randomNum = Math.ceil(Math.random() * 6);
    const splashURL = '../assets/images/splash0' + randomNum + '.jpg';
    console.log(splashURL);
    document.getElementById("splashImage").src = splashURL;
  }
  pickPic();
</script>