<div class="mainBox pure-g">

  <div class="leftBox pure-u-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-5">

    <div class="leftCard">

      <h2>Following</h2>

      <ul>
      {{#each friendsList as |friend|}}
        <li>{{friend}}</li>
      {{/each}}
      </ul>

      <ul>
        <li>Friend 1</li>
        <li>Friend 2</li>
        <li>Friend 3</li>
        <li>Friend 4</li>
        <li>Friend 5</li>
      </ul>

    </div>

  </div>

  <div class="rightBox pure-u-1 pure-u-sm-1-2 pure-u-md-2-3 pure-u-lg-4-5">

    <div class="rightCard pure-g">

      <div class="subHeader pure-u-1">
          <div><h2>The Feed</h2></div>
          <div><button id="newPhoto">+friend</button></div>
      </div>

      <!-- image gallery of user's photos -->

      {{#each photos as |photo|}} -->
      <div class="foodCard pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-3">
        <a href="{{photo.review}}">
          <img src="{{photo.url}}" alt="{{photo.id}}">{{photo.id}}
        </a>
      </div>
      {{/each}}

      <div class="foodCard pure-u-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-3">
