  <div class="leftCard">

    <h2>Your Profile</h2>

    <ul>
    {{#each profileData}}
    {{#if email}}
      <li>{{ user }}</li>
      <li>{{ username }}</li>
    {{/if}}
    {{/each}}

    </ul>

    <h2>Following</h2>

    <ul>
    {{#each profileData}}
    {{#if followed_username}}
      <li>{{ followed_username }}</li>
    {{/if}}
    {{/each}}
    </ul>


    <h2>Followers</h2>

    <ul>
    {{#each profileData}}
    {{#if followers_username}}
      <li>{{ followers_username }}</li>
    {{/if}}
    {{/each}}
    </ul>

  </div>

</div>

